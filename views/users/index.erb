<div class="grid-container">
  <div class="medium-6 cell">
    <h2><%= @users.count %> Users</h2>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Password</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.password %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <a href='/users/new'>New User</a>
  </div>
</div>
