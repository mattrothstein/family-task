<div class="grid-container">
  <div class="medium-6 cell">
    <h4>Search</h4>
    <form action="/locations" method="get">
      <div style="width:200px;display: inline-block;">
        <label>Address 1:</label>
        <input type="text" name="[search]address_1" value="<%=params.dig(:search, :address_1)%>">
      </div>
      <div style="width:200px;display: inline-block;">
        <label>Address 2:</label>
        <input type="text" name="[search]address_2" value="<%=params.dig(:search, :address_2)%>">
      </div>
      <div style="width:200px;display: inline-block;">
        <label>City:</label>
        <input type="text" name="[search]city" value="<%=params.dig(:search, :city)%>">
      </div>
      <div style="width:200px;display: inline-block;">
        <label>State:</label>
        <input type="text" name="[search]state" value="<%=params.dig(:search, :state)%>">
      </div>
      <div style="width:200px;display: inline-block;">
        <label>Postal Code:</label>
        <input type="text" name="[search]postal_code" value="<%=params.dig(:search, :postal_code)%>">
      </div>
      <br>
      <input type="submit" value="Search">
    </form>
  </div>
  <div class="medium-6 cell">
    <h2><%= @locations.count %> Locations</h2>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Address 1</th>
          <th>Address 2</th>
          <th>City</th>
          <th>State</th>
          <th>Postal Code</th>
          <th colspan='2'>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @locations.each do |record| %>
          <tr>
            <td><%= record.id %></td>
            <td><%= record.address_1 %></td>
            <td><%= record.address_2 %></td>
            <td><%= record.city %></td>
            <td><%= record.state %></td>
            <td><%= record.postal_code %></td>
            <td><a href=<%="locations/#{record.id}/edit"%>>Edit</a></td>
            <td>
              <form action="/locations/<%=record.id%>" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" value="Delete">
              </form>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <a href='/locations/new'>New Location</a>
  </div>
</div>
