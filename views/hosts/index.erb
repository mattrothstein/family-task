<div class="grid-container">
  <div class="medium-6 cell">
    <h2><%= @event.title %> - <%= @hosts.count%> Hosts</h2>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @hosts.each do |record| %>
          <tr>
            <td><%= record.user.first_name %></td>
            <td>
              <form action="/event/<%=@event.id%>/hosts/<%=record.user_id%>" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" value="Remove">
              </form>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <a href='/events'>Back to Events</a> |
    <a href='/event/<%=@event.id%>/hosts/new'>Add New Host</a>
  </div>
</div>
